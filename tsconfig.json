{
  "compilerOptions": {
    "skipLibCheck": true,
    "module": "CommonJS",
    "esModuleInterop": true,
    "lib": ["ES2022"],
    "target": "ES2022",
    "noImplicitAny": true,
    "moduleResolution": "Node",
    "sourceMap": false,
    "outDir": "dist",
    "types": ["node", "mocha"],
    "declaration": true,
    "emitDeclarationOnly": true,
    "declarationDir": "dist/types",
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "baseUrl": ".",
  },
  "include": ["*/**.ts"]
}